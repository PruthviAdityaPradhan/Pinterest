<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-[url(https://i.pinimg.com/564x/cc/3c/fc/cc3cfccbe707e570009b686ab0b05da3.jpg)] flex items-center justify-center">
  <div class="w-[30vw]  bg-white px-20 py-10 rounded-[30px]">
    <h1 class="text-2xl tracking-tighter text-center  text-zinc-700 capitalize leading-none ">Create New Account</h1>
    <form action="/register" method="post">
      <input class="border-2 rounded-md block mt-3 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 rounded-md block mt-3 w-full px-3 py-2" type="email" name="email" placeholder="email">
      <input class="border-2 rounded-md block mt-3 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
      <input class="border-2 rounded-md block mt-3 w-full px-3 py-2" type="password" name="password" placeholder="password">
      
      <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white" type="submit" value="Create new account">
      <p class="text-xs font-semibold text-zinc-500 text-center mt-7 w-4/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service. acknowledge you've read our Privacy Policy.  Notice at collection.
        Not on Pinterest yet? Sign up
        Are you a business?
        Get started here!
        </p>
    </form>
    <a class="inline-block text-[15px] mt-4 text-zinc-700 font-semibold text-center w-full" href="/">Login to an Existing Account</a>
  </div>
</div>
<% include ./partials/footer.ejs %>